{
  "name": "nodejs-typescript-template",
  "version": "0.0.1",
  "description": "A NodeJS TypeScript API template",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run migrate:up && node dist/index.js",
    "build": "tsc",
    "dev": "npm run migrate:up && nodemon --exec ts-node ./src/index.ts --mode development",
    "migrate": "db-migrate --migrations-dir ./migrations",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:reset": "npm run migrate reset",
    "migrate:create": "npm run migrate create",
    "db:reset": "npm run migrate:reset && npm run migrate:up",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "cross-env APP_NODE_ENV=test APP_SECRET=APPSECRET nyc mocha -r ts-node/register src/**/*.test.ts --exclude src/config/**/*.ts --timeout 15000 --exit",
    "test:e2e": "jest --config ./tests/jest-e2e.json",
    "prepare": "husky install",
    "configure": "node scripts/configure.js"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "dependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "app-root-path": "^3.1.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "file-stream-rotator": "^1.0.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "redis": "^4.6.7",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.15.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "chai": "^4.3.8",
    "chai-http": "^4.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.4",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
